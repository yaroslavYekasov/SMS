<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="friends.DBFriendPage"
             Title="DBFriendPage">
    <StackLayout>
        <Label Text="Nimi" />
        <Entry Text="{Binding Name}" />

        <Label Text="Email" />
        <Entry Text="{Binding Email}" />

        <Label Text="Telefon" />
        <Entry Text="{Binding Telefon}" />

        <StackLayout Orientation="Horizontal">
            <Button Text="Salvesta" Clicked="Button_Clicked_1" />
            <Button Text="Kustuta" Clicked="Button_Clicked_2" />
            <Button Text="Tagasi" Clicked="Button_Clicked_3" />
        </StackLayout>
    </StackLayout>
</ContentPage>